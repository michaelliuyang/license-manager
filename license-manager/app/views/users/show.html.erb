<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		<h2><%= t('user.show_user_info')%></h2>
		<% if session[:user].is_admin %>
		<ul>
			<li class="nobg">
				<%= link_to t('user.user_list'), users_path %>
			</li>
		</ul>
		<% end %>
	</div>
	<div class="block_content">
		<div class="message success">
			<p>
				<%= flash[:notice]%>
			</p>
		</div>
		<p>
			<%= t('user.login_name')+":" %>
			<%= @user.login_name %>
		</p>
		<p>
			<%= t('user.name')+":" %>
			<%= @user.name %>
		</p>
		<p>
			<%= t('user.email')+":" %>
			<%= @user.email %>
		</p>
		<p>
			<%= t('user.lock')+":" %>
			<%= get_is_lock(@user.is_lock) %>
		</p>
		<p>
			<%= t('user.admin')+":" %>
			<%= get_is_admin(@user.is_admin) %>
		</p>
		<p>
			<%= t('user.last_login_ip')+":"%>
			<%= @user.last_login_ip %>
		</p>
		<p>
			<%= t('user.last_login_time')+":"%>
			<%= format_time(@user.last_login_time) %>
		</p>
	</div>
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>
