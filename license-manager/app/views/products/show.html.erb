<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		<h2><%= t "product.show"%></h2>
		<ul>
			<li><%= link_to t('product.list'), products_path %></li>
		</ul>
	</div>
	<div class="block_content">
		<% if notice %>
		<div class="message success">
			<p>
				<%= notice %>
			</p>
		</div>
		<% end %>
		<p>
			<b><%= t "product.name" %>:</b>
			<%= @product.name %>
		</p>
		<p>
			<b><%= t "product.value" %>:</b>
			<%= @product.value %>
		</p>
		<p>
			<b><%= t "product.is_must" %>:</b>
			<%= @product.is_must == true ? t('global.y') : t('global.n')%>
		</p>
	</div>
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>